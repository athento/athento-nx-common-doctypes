<?xml version="1.0" encoding="UTF-8"?>

<component
	name="org.athento.nuxeo.athento-nx-common-doctypes.formlayout-projectFile"
	version="1.0.0">
	<require>org.nuxeo.runtime.started</require>

	<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
		point="layouts">

		<layout name="layout@formlayout-projectFile">
			<labels>
				<label>label.athento-nx-common-doctypes.ProjectFile</label>
			</labels>
			<templates>
				<template mode="any">/layouts/projectFileHeading_widget_layout_template.xhtml
				</template>
			</templates>
			<rows>
				<row>
					<properties mode="any">
						<property name="nxl_colspan_0">1</property>
						<property name="nxl_colspan_1">1</property>
					</properties>
					<widget>projectid</widget>
					<widget>projectUserid</widget>
				</row>
				<row>
					<properties mode="any">
						<property name="nxl_colspan_0">2</property>
					</properties>
					<widget>projectName</widget>
				</row>
			</rows>
			<widget name="projectid" type="text">
				<labels>
					<label mode="any">label.projectFile.projectid</label>
				</labels>
				<translated>true</translated>
				<fields>
					<field>projectFile:projectid</field>
				</fields>
			</widget>
			<widget name="projectUserid" type="text">
				<labels>
					<label mode="any">label.projectFile.projectUserid</label>
				</labels>
				<translated>true</translated>
				<fields>
					<field>projectFile:projectUserid</field>
				</fields>
			</widget>
			<widget name="projectName" type="text">
				<labels>
					<label mode="any">label.projectFile.projectName</label>
				</labels>
				<translated>true</translated>
				<fields>
					<field>projectFile:projectName</field>
				</fields>
			</widget>
		</layout>

	</extension>

</component>
		